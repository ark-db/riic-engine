{
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"postinstall": "svelte-kit sync",
		"prepare": "husky install",
		"format": "prettier --plugin-search-dir . --write . && cd src-tauri && cargo fmt",
		"lint": "prettier --plugin-search-dir . --check . && svelte-check --tsconfig ./tsconfig.json && eslint . --max-warnings=0 --exit-on-fatal-error && cd src-tauri && cargo clippy",
		"update": "npx npm-check-updates -u && npm install && poetry update && cd src-tauri && cargo upgrade --incompatible && cargo update",
		"tauri": "tauri"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^2.0.1",
		"@sveltejs/kit": "^1.10.0",
		"@tauri-apps/cli": "^1.2.3",
		"@typescript-eslint/eslint-plugin": "^5.54.0",
		"@typescript-eslint/parser": "^5.54.0",
		"eslint": "^8.35.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^8.0.3",
		"prettier": "^2.8.4",
		"prettier-plugin-svelte": "^2.9.0",
		"svelte": "^3.55.1",
		"svelte-check": "^3.0.4",
		"svelte-preprocess": "^5.0.1",
		"tslib": "^2.5.0",
		"typescript": "^4.9.5",
		"vite": "^4.1.4"
	},
	"dependencies": {
		"@tauri-apps/api": "^1.2.0",
		"tippy.js": "^6.3.7"
	}
}
