{
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync && husky install",
		"format": "prettier --plugin-search-dir . --write . && cd src-tauri && cargo fmt",
		"lint": "prettier --plugin-search-dir . --check . && svelte-check --tsconfig ./tsconfig.json && eslint . --max-warnings=0 --exit-on-fatal-error && cd src-tauri && cargo clippy",
