{
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"postinstall": "svelte-kit sync",
		"prepare": "husky install",
		"format": "npm run format:frontend && cargo fmt --all",
		"format:frontend": "prettier --plugin-search-dir . --write .",
		"lint": "npm run lint:frontend && cargo fmt --all --check && cargo clippy --workspace",
		"lint:frontend": "prettier --plugin-search-dir . --check . && svelte-check --tsconfig ./tsconfig.json && eslint . --max-warnings=0 --exit-on-fatal-error",
		"update": "npx npm-check-updates --upgrade && npm install && cargo upgrade --incompatible && cargo update",
		"fetch": "cargo run --package riic-fetch --release && npm run format:frontend",
		"tauri": "tauri"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^2.0.2",
		"@sveltejs/kit": "^1.16.2",
		"@tauri-apps/cli": "^1.3.0",
		"@typescript-eslint/eslint-plugin": "^5.59.2",
		"@typescript-eslint/parser": "^5.59.2",
		"eslint": "^8.40.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^8.0.3",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.0",
		"svelte": "^3.59.0",
		"svelte-check": "^3.3.1",
		"svelte-preprocess": "^5.0.3",
		"tslib": "^2.5.0",
		"typescript": "^5.0.4",
		"vite": "^4.3.5"
	},
	"dependencies": {
		"@tauri-apps/api": "^1.3.0",
		"tippy.js": "^6.3.7"
	}
}
