{
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"postinstall": "svelte-kit sync",
		"prepare": "husky install",
		"format": "prettier --plugin-search-dir . --write . && cd src-tauri && cargo fmt",
